rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: Only authenticated user or admin can read/write
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'admin');
    }
    // Add further rules for boards, tasks, etc. as needed
  }
}
